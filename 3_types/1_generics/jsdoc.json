{
  "source": {
    "includePattern": ".+\\.(js|ts)$",
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  },
  "markdown": {
    "idInHeadings": true,
    "hardwrap": false
  },
  "plugins": ["jsdoc-babel", "plugins/markdown"],
  "babel": {
    "extensions": "ts",
    "ignore": ["**/*.(test|spec).ts"]
  },
  "opts": {
    "destination": "docs",
    "recurse": true,
    "template": "node_modules/clean-jsdoc-theme"
  }
}
